{
  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@vueUtils/*": [
        "./src/vueUtils/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@views/*": [
        "./src/views/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@mixins/*": [
        "./src/mixins/*"
      ],
      "@store/*": [
        "./src/store/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./auto-imports.d.ts",
    "src/mock/index.js"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}